{
  "name": "staysync-hotel-management",
  "productName": "StaySync Manager",
  "private": true,
  "version": "3.5.0",
  "type": "module",
  "main": "electron/main.js",
  "author": "StaySync Inc",
  "description": "Smart Hotel Management Dashboard",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"node server.js\" \"node worker.js\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"node server.js\" \"node worker.js\" \"wait-on tcp:5173 && electron .\"",
    "dist": "tsc && vite build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.32.0",
    "@vercel/analytics": "^1.6.1",
    "bullmq": "^5.4.0",
    "dexie": "^4.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "firebase": "^12.7.0",
    "lucide-react": "^0.559.0",
    "nodemailer": "^7.0.11",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.0",
    "vite": "^7.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.staysync.manager",
    "productName": "StaySync",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "worker.js",
      "server.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Office",
      "maintainer": "StaySync"
    }
  }
}
