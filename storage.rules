rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files in the 'documents' folder and its subfolders.
    match /documents/{allPaths=**} {
      allow read;
    }

    // Allow write access only for authenticated users to the 'documents' folder.
    match /documents/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}